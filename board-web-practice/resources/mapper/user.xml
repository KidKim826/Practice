<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.board.model.dao.UserDao">
	<resultMap type="User" id="userMap">
		<result column="userId" property="userId" />
		<result column="password" property="password" />
		<result column="name" property="name" />
		<result column="email" property="email" />
	</resultMap>
	
	<!-- 회원등록하기 -->
	<insert id="insertUser" parameterType="User">
		INSERT INTO users (userId, password, name, email)
		VALUES (#{userId}, #{password}, #{name}, #{email})
	</insert>
	
	<!-- 등록된 회원 조회 -->
	<select id="selectUser" parameterType="User" resultType="userMap">
		SELECT userId, password, name, email
		FROM users
		WHERE userId=#{userId} and password=#{password}
	</select>
	
	<!-- 등록된 회원 id로 조회 -->
	<select id="selectUserById" parameterType="User" resultType="userMap">
		SELECT userId, password, name, email
		FROM users
		WHERE userId = #{userId}
	</select>
</mapper>